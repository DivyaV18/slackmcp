{
  "mcpServers": {
    "slack": {
      "command": "python",
      "args": ["slack_mcp_server_simple.py"],
      "cwd": ".",
      "env": {
        "SLACK_BOT_TOKEN": "xoxb-your-bot-token-here",
        "SLACK_USER_TOKEN": "xoxp-your-user-token-here"
      },
      "description": "Slack MCP Server with 117+ tools for comprehensive Slack integration",
      "version": "1.0.0",
      "author": "Slack MCP Community",
      "license": "MIT"
    }
  },
  "server_info": {
    "name": "Slack MCP Server",
    "description": "A comprehensive Model Context Protocol server for Slack integration with 117+ tools covering messaging, channels, users, calls, user groups, and more.",
    "version": "1.0.0",
    "total_tools": 117,
    "categories": [
      "Do Not Disturb & Presence Management",
      "Messaging & Communication", 
      "Reactions & Stars",
      "Pins & Bookmarks",
      "Channels & Conversations",
      "Users & User Management",
      "User Groups",
      "Calls & Meetings",
      "Real-Time Messaging",
      "Reminders & Scheduling",
      "Emojis & Customization",
      "URL & Link Management",
      "Files & Remote Files",
      "Team & Workspace"
    ]
  },
  "environment": {
    "required_variables": {
      "SLACK_BOT_TOKEN": {
        "description": "Slack Bot User OAuth Token (starts with xoxb-)",
        "type": "string",
        "required": true,
        "example": "xoxb-1234567890-1234567890-abcdefghijklmnopqrstuvwx",
        "scopes": [
          "chat:write",
          "channels:read",
          "channels:write", 
          "channels:manage",
          "users:read",
          "usergroups:read",
          "usergroups:write",
          "calls:write",
          "files:read",
          "pins:read",
          "pins:write",
          "reactions:read",
          "reactions:write",
          "stars:read",
          "stars:write",
          "reminders:read",
          "reminders:write",
          "search:read",
          "team:read",
          "bot",
          "commands",
          "incoming-webhook",
          "app_mentions:read",
          "emoji:read",
          "links:read",
          "links:write",
          "im:read",
          "im:write",
          "im:history",
          "mpim:read",
          "mpim:write",
          "mpim:history",
          "rtm:stream"
        ]
      },
      "SLACK_USER_TOKEN": {
        "description": "Slack User OAuth Token (starts with xoxp-) - Required for DND operations",
        "type": "string", 
        "required": true,
        "example": "xoxp-1234567890-1234567890-abcdefghijklmnopqrstuvwx",
        "scopes": [
          "dnd:read",
          "dnd:write",
          "users:read",
          "users:write",
          "emoji:write"
        ]
      }
    },
    "optional_variables": {
      "SLACK_APP_TOKEN": {
        "description": "Slack App-Level Token (starts with xapp-) - For Socket Mode",
        "type": "string",
        "required": false,
        "example": "xapp-1234567890-1234567890-abcdefghijklmnopqrstuvwx",
        "scopes": [
          "connections:write"
        ]
      }
    }
  },
  "oauth_scopes": {
    "bot_token_scopes": {
      "messaging": [
        "chat:write",
        "chat:write.public", 
        "chat:write.customize"

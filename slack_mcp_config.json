  },
  "troubleshooting": {
    "common_issues": {
      "missing_bot_token": {
        "error": "SLACK_BOT_TOKEN environment variable is required",
        "solution": "Set your bot token in .env file or environment: export SLACK_BOT_TOKEN=xoxb-your-token-here"
      },
      "missing_user_token": {
        "error": "SLACK_USER_TOKEN environment variable is required", 
        "solution": "Set your user token in .env file or environment: export SLACK_USER_TOKEN=xoxp-your-token-here"
      },
      "module_not_found": {
        "error": "ModuleNotFoundError: No module named 'slack_sdk'",
        "solution": "Install required dependencies: pip install slack-sdk"
      },
      "permission_denied": {
        "error": "Permission denied errors",
        "solution": "Ensure your Slack app has the required OAuth scopes and verify your tokens are correct"
      },
      "missing_scope": {
        "error": "missing_scope errors",
        "solution": "Add the required scopes to your Slack app and reinstall the app to your workspace"
      }
    }
  },

      ],
      "stars": [
        "stars:read",
        "stars:write"
      ],
      "reminders": [
        "reminders:read",
        "reminders:write"
      ],
      "search": [
        "search:read"
      ],
      "team": [
        "team:read"
      ],
      "bot": [
        "bot",
        "commands",
        "incoming-webhook",
        "app_mentions:read"
      ],
      "emoji": [
        "emoji:read"
      ],
      "links": [
        "links:read",

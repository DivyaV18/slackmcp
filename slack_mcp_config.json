        "groups:manage",
        "groups:history"
      ],
      "users": [
        "users:read",
        "users:read.email",
        "users:write"
      ],
      "user_groups": [
        "usergroups:read",
        "usergroups:write"
      ],
      "calls": [
        "calls:write",
        "calls:read"
      ],
      "files": [
        "files:read",
        "files:write"
      ],
      "pins": [
        "pins:read",
        "pins:write"
      ],
      "reactions": [
        "reactions:read",

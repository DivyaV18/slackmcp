      ],
      "required_scopes": ["reminders:read", "reminders:write", "chat:read"],
      "token_type": "bot"
    },
    "emojis": {
      "name": "Emojis & Customization",
      "description": "Tools for managing custom emojis and team customization",
      "tools_count": 5,
      "key_tools": [
        "slack_add_a_custom_emoji_to_a_slack_team",

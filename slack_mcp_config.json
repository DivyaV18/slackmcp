      "rtm": [
        "rtm:stream"
      ]
    },
    "user_token_scopes": {
      "dnd": [
        "dnd:read",
        "dnd:write"
      ],
      "users": [
        "users:read",
        "users:write"
      ],
      "emoji": [
        "emoji:write"
      ]
    }
  },
  "tool_categories": {
    "do_not_disturb": {
      "name": "Do Not Disturb & Presence Management",
      "description": "Tools for managing DND status, snooze mode, and user presence",
      "tools_count": 10,
      "key_tools": [
        "slack_activate_or_modify_do_not_disturb_duration",
        "slack_end_user_do_not_disturb_session",
        "slack_set_user_presence",
        "slack_get_user_presence_info"
      ],
      "required_scopes": ["dnd:write", "users:read", "users:write"],
      "token_type": "user"
    },
    "messaging": {
      "name": "Messaging & Communication", 
      "description": "Tools for sending, updating, and managing messages",
      "tools_count": 15,
      "key_tools": [
        "slack_send_message",
        "slack_sends_a_message_to_a_slack_channel",
        "slack_send_ephemeral_message",
        "slack_schedule_message",
        "slack_updates_a_slack_message"
      ],
      "required_scopes": ["chat:write", "chat:write.public"],
      "token_type": "bot"
    },
    "reactions": {
      "name": "Reactions & Stars",
      "description": "Tools for managing reactions and starred items", 
      "tools_count": 8,
      "key_tools": [
        "slack_add_reaction_to_an_item",
        "slack_remove_reaction_from_item",
        "slack_add_a_star_to_an_item",
        "slack_list_starred_items"
      ],
      "required_scopes": ["reactions:read", "reactions:write", "stars:read", "stars:write"],
      "token_type": "bot"
    },
    "pins": {
      "name": "Pins & Bookmarks",
      "description": "Tools for managing pinned items and bookmarks",
      "tools_count": 3,
      "key_tools": [
        "slack_pins_an_item_to_a_channel",
        "slack_unpin_item_from_channel",
        "slack_lists_pinned_items_in_a_channel"
      ],
      "required_scopes": ["pins:read", "pins:write"],
      "token_type": "bot"
    },
    "channels": {
      "name": "Channels & Conversations",
      "description": "Tools for managing channels and conversations",
      "tools_count": 20,
      "key_tools": [
        "slack_create_channel",
        "slack_archive_a_public_or_private_channel",
        "slack_unarchive_a_public_or_private_channel",
        "slack_rename_a_slack_channel",
        "slack_invite_users_to_a_slack_channel"
      ],
      "required_scopes": ["channels:read", "channels:write", "channels:manage", "groups:read", "groups:write"],
      "token_type": "bot"
    },
    "users": {
      "name": "Users & User Management",
      "description": "Tools for managing users and user information",
      "tools_count": 15,
      "key_tools": [
        "slack_list_all_users",
        "slack_find_users",
        "slack_lookup_users_by_email",
        "slack_invite_user_to_workspace",
        "slack_retrieve_detailed_user_information"
      ],
      "required_scopes": ["users:read", "users:write", "users:read.email"],
      "token_type": "bot"
    },
    "user_groups": {
      "name": "User Groups",
      "description": "Tools for managing user groups and their members",
      "tools_count": 7,
      "key_tools": [
        "slack_create_a_slack_user_group",
        "slack_update_an_existing_slack_user_group",
        "slack_update_user_group_members",
        "slack_list_user_groups_for_team_with_options"
      ],
      "required_scopes": ["usergroups:read", "usergroups:write"],
      "token_type": "bot"
    },
    "calls": {
      "name": "Calls & Meetings",
      "description": "Tools for managing Slack calls and meetings",
      "tools_count": 9,
      "key_tools": [
        "slack_start_call",
        "slack_add_call_participants",
        "slack_remove_call_participants",
        "slack_retrieve_call_information",
        "slack_end_a_call_with_duration_and_id"
      ],
      "required_scopes": ["calls:write", "calls:read"],
      "token_type": "bot"
    },
    "real_time": {
      "name": "Real-Time Messaging",
      "description": "Tools for real-time messaging and RTM",
      "tools_count": 2,
      "key_tools": [
        "slack_start_real_time_messaging_session",
        "slack_set_read_cursor_in_a_conversation"
      ],
      "required_scopes": ["rtm:stream", "channels:write", "groups:write", "im:write", "mpim:write"],
      "token_type": "bot"
    },
    "reminders": {
      "name": "Reminders & Scheduling",

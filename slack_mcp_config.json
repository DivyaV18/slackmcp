  "setup_instructions": {
    "step_1": {
      "title": "Install Dependencies",
      "description": "Install required Python packages",
      "command": "pip install fastmcp slack-sdk python-dotenv"
    },
    "step_2": {
      "title": "Create Slack App",
      "description": "Set up a Slack app with required scopes",
      "url": "https://api.slack.com/apps",
      "instructions": [
        "Go to api.slack.com/apps",
        "Click 'Create New App' → 'From scratch'",
        "Enter app name and select your workspace",
        "Go to 'OAuth & Permissions' and add required scopes",
        "Click 'Install to Workspace'",
        "Copy the 'Bot User OAuth Token' (starts with xoxb-)",
        "Copy the 'User OAuth Token' (starts with xoxp-)"
      ]
    },
    "step_3": {
      "title": "Configure Environment",
      "description": "Set up environment variables",
      "instructions": [
        "Create a .env file in your project directory",
        "Add SLACK_BOT_TOKEN=xoxb-your-bot-token-here",
        "Add SLACK_USER_TOKEN=xoxp-your-user-token-here"
      ]
    },
    "step_4": {
      "title": "Run the Server",
      "description": "Start the MCP server",
      "command": "python slack_mcp_server_simple.py"
    },
    "step_5": {
      "title": "Test the Setup",
      "description": "Verify the server is working",
      "command": "python test_simple_tool.py"
    }
  },
  "testing": {
    "test_file": "test_simple_tool.py",
    "test_command": "python test_simple_tool.py",
    "expected_output": [
      "🧪 Testing SLACK_ACTIVATE_OR_MODIFY_DO_NOT_DISTURB_DURATION tool...",
      "Result: ✅ DND set for 30 minutes",
      "Invalid input result: ❌ Invalid input: 'invalid' is not a valid number"
    ],
